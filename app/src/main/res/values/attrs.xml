<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="GlideImageView">
        <attr name="placeHolderSrc" format="reference" />
        <attr name="errorHolderSrc" format="reference" />
        <attr name="placeHolderColor" format="color" />
        <attr name="errorHolderColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="cornerType" format="enum">
            <enum name="all" value="0" />
            <enum name="left_top" value="1" />
            <enum name="left_bottom" value="2" />
            <enum name="right_top" value="3" />
            <enum name="right_bottom" value="4" />
            <enum name="left" value="5" />
            <enum name="top" value="6" />
            <enum name="right" value="7" />
            <enum name="bottom" value="8" />
        </attr>
        <attr name="isCircular" format="boolean" />
        <attr name="skipCache" format="boolean" />
        <attr name="decodeFormat" format="enum">
            <enum name="ARGB_8888" value="0" />
            <enum name="RGB_565" value="1" />
        </attr>
    </declare-styleable>
</resources>